  author = {Kandel, Sean and Heer, Jeffrey and Plaisant, Catherine and Kennedy, Jessie and {van Ham}, Frank and Riche, Nathalie Henry and Weaver, Chris and Lee, Bongshin and Brodbeck, Dominique and Buono, Paolo},
  year = {2011},
